{
    "name": "worksome/foggy",
    "description": "Foggy is a tool for making database dumps with some data removed/changed.",
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "oliver@worksome.com"
        }
    ],
    "license": ["MIT"],
    "bin": [
        "bin/foggy"
    ],
    "require": {
        "php": ">=7.4",
        "doctrine/dbal": "^2.9|^2.8|^2.7",
        "symfony/console": "^5.1",
        "symfony/var-dumper": "^5.1",
        "ext-json": "*",
        "thecodingmachine/safe": "^0.1.15",
		"ext-pdo": "*",
        "fakerphp/faker": "^1.10"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "pestphp/pest": "^0.3.9",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Foggy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Foggy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:pest" : "vendor/bin/pest",
        "test": [
            "@test:pest"
        ]
    }
}
