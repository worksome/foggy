{
    "name": "worksome/foggy",
    "description": "Foggy is a tool for making database dumps with some data removed/changed.",
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "oliver@worksome.com"
        }
    ],
    "license": ["MIT"],
    "bin": [
        "bin/foggy"
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.9",
        "symfony/console": "^6.4 || ^7.0",
        "symfony/var-dumper": "^6.4 || ^7.0",
        "thecodingmachine/safe": "^2.5 || ^3.0",
        "fakerphp/faker": "^1.10"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "pestphp/pest": "^4.1",
        "mockery/mockery": "^1.6",
        "worksome/coding-style": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Foggy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Foggy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    }
}
